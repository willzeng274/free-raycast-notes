{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Offbrand Raycast Notes",
  "version": "0.1.0",
  "identifier": "app.offbrand.raycast-notes",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Offbrand Raycast Notes",
        "width": 400,
        "height": 650,
        "resizable": true,
        "decorations": false,
        "center": true,
        "visible": true,
        "transparent": true,
        "acceptFirstMouse": true
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}